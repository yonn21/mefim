                <input class="form-control mb-3 mt-1" style="margin: 0 15px; display: inline-block;" type="file"
                  id="formFileMultiple" name="director_thumbnail" required />
                <div class="col-md-12 col-sm-12 col-lg-12 mb-3">
                  <label for="validationServer01" class="form-label">Mô tả</label>
                  <textarea name="director_description" class="form-control" id="validationServer01"
                    required></textarea>
                </div>
                <div class="col-12">
