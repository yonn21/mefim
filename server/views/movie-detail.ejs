    <div class="dashboard-wrapper">
      <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content">
          <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <div class="page-header">
                <h2 class="pageheader-title">Chi tiết phim: <%= movie.primary_title %> (<%= movie.secondary_title %>)
                </h2>
                <div class="page-breadcrumb">
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                        <a href="/admin/dashboard" class="breadcrumb-link">Menu</a>
                      </li>
                      <li class="breadcrumb-item">
                        <a href="/admin/movie-management/page-1" class="breadcrumb-link">Quản lý
                          phim</a>
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">
                        Chi tiết phim
                      </li>
                    </ol>
                  </nav>
                </div>
              </div>
            </div>
          </div>
          <div class="content" style="width: 100%; height: 100vh">
            <div class="container-fluid">
              <div class="col-md-12 col-sm-12 col-lg-12 mb-3">
                <div class="m-r-10">
                  <img src="<%= movie.thumbnail %> " alt="user" class="rounded" height="350" />
                  <img src="<%= movie.cover_image %> " alt="user" class="rounded" height="350" />
                </div>
              </div>
              <div class="col-md-12 col-sm-12 col-lg-12 mb-3">
                <button type="button" class="btn btn-primary" onclick="redirectToEdit()">Chỉnh sửa thông
                  tin</button>
                <button type="button" class="btn btn-secondary" onclick="redirectToLinkDirector()">Thêm đạo
                  diễn</button>
                <button type="button" class="btn btn-secondary" onclick="redirectToUnlinkDirector()">Xóa đạo
                  diễn</button>
                <button type="button" class="btn btn-success" onclick="redirectToLinkActor()">Thêm diễn viên</button>
                <button type="button" class="btn btn-success" onclick="redirectToUnlinkActor()">Xóa diễn viên</button>
                <button type="button" class="btn btn-warning" onclick="redirectToLinkGenre()">Thêm thể loại</button>
                <button type="button" class="btn btn-warning" onclick="redirectToUnlinkGenre()">Xóa thể loại</button>
                <button type="button" class="btn btn-danger"
                  onclick="if (comfirmDelete('Xóa phim này?', event)) removeMovie()">Xóa
                  phim</button>
              </div>
              <div class="col-md-12 col-sm-12 col-lg-12 mb-3">
                <label for="validationServer01" class="form-label">
                  <table>
                    <tr>
                      <td width="150px">URL:</td>
                      <td><span style="color: black;">
                          <%= movie.url_name %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Tên chính:</td>
                      <td><span style="color: black;">
                          <%= movie.primary_title %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Tên phụ:</td>
                      <td><span style="color: black;">
                          <%= movie.secondary_title %>
                        </span></td>
                    </tr>
                    <tr>
                      <td style="vertical-align: top;">Đạo diễn:</td>
                      <td>
                        <span style="color: black;">
                          <% movie.directors.forEach((directorUrl, index)=> {
                            const director = directors.find((m) => m.director_url === directorUrl);
                            if (director) { %>
                            <a href="/admin/director-management/detail/<%= director.director_url %>"
                              style="color: black; transition: color 0.3s;" onmouseover="this.style.color='blue';"
                              onmouseout="this.style.color='black';">
                              <%= director.director_name %>
                            </a>
                            <% if (index < movie.directors.length - 1) { %>
                              |
                              <% } %>
                                <% } }); %>
                        </span>
                      </td>
                    </tr>

                    <td style="vertical-align: top;">Diễn viên:</td>
                    <td><span style="color: black;">
                        <% movie.actors.forEach((actorUrl, index)=> {
                          const actor = actors.find((m) => m.actor_url === actorUrl);
                          if (actor) { %>
                          <a href="/admin/actor-management/detail/<%= actor.actor_url %>"
                            style="color: black; transition: color 0.3s;" onmouseover="this.style.color='blue';"
                            onmouseout="this.style.color='black';">
                            <%= actor.actor_name %>
                          </a>
                          <% if (index < movie.actors.length - 1) { %>
                            |<% } %>
                              <% }}); %>
                      </span></td>
                    </tr>
                    <tr>
                      <td style="vertical-align: top;">Thể loại:</td>
                      <td><span style="color: black;">
                          <% movie.genres.forEach((genreUrl, index)=> {
                            const genre = genres.find((m) => m.genre_url === genreUrl);
                            if (genre) { %>
                            <a href="/admin/genre-management/detail/<%= genre.genre_url %>"
                              style="color: black; transition: color 0.3s;" onmouseover="this.style.color='blue';"
                              onmouseout="this.style.color='black';">
                              <%= genre.genre_name %>
                            </a>
                            <% if (index < movie.genres.length - 1) { %>
                              |<% } %>
                                <% }}); %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Năm phát hành:</td>
                      <td><span style="color: black;">
                          <%= movie.year %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Quốc gia:</td>
                      <td><span style="color: black;">
                          <%= movie.country %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Loại phim:</td>
                      <td><span style="color: black;">
                          <%= movie.type %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Thời lượng:</td>
                      <td><span style="color: black;">
                          <%= movie.duration %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Phụ đề:</td>
                      <td>
                        <span style="color: black;">
                          <% movie.type_sub.forEach((typeSub, index)=> { %>
                            <%= typeSub %>
                              <% if (index < movie.type_sub.length - 1) { %>
                                |
                                <% } %>
                                  <% }); %>
                        </span>
                      </td>
                    </tr>
                    <tr>
                      <td>Trailer:</td>
                      <td><span style="color: black;">
                          <%= movie.trailer %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Đánh giá:</td>
                      <td>
                        <% if (movie.rating && movie.rating.length> 0) { %>
                          <span style="color: black;">
                            <%= movie.rating %>
                          </span>
                          <% } else { %>
                            <span style="color: black;">Chưa có đánh giá</span>
                            <% } %>
                      </td>
                    </tr>
                    <tr>
                      <td>Lượt yêu thích:</td>
                      <td><span style="color: black;">
                          <%= movie.number_favourited %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Lượt xem 3 ngày:</td>
                      <td><span style="color: black;">
                          <%= movie.views_3days %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Lượt xem tuần:</td>
                      <td><span style="color: black;">
                          <%= movie.views_week %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Lượt xem tháng:</td>
                      <td><span style="color: black;">
                          <%= movie.views_month %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Lượt xem năm:</td>
                      <td><span style="color: black;">
                          <%= movie.views_year %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Lượt xem tổng:</td>
                      <td><span style="color: black;">
                          <%= movie.views_all %>
                        </span></td>
                    </tr>
                    <tr>
                      <td>Tổng bình luận:</td>
                      <td><span style="color: black;">
                          <%= movie.comment.length %>
                        </span></td>
                    </tr>
                  </table>
                  <br><span style="color: black;">
                    <%= movie.summary %>
                  </span><br>
                </label>
                <label for="validationServer01" class="form-label"></label>
              </div>
              <!-- <div class="col-md-12 col-sm-12 col-lg-12 mt-4">
                <label for="validationServer01" class="form-label">Danh sách diễn viên: <%= movie.actors.length %>
                </label>
                <div class="search-box">
                  <input type="text" placeholder="Tìm kiếm..." id="actor-search-box" />
                </div>
                <select name="movies" class="form-control" id="validationServer02" multiple required>
                  <% movie.actors.forEach((actorUrl)=> {
                    const actor = actors.find((m) => m.actor_url === actorUrl);
                    if (actor) { %>
                    <option value="<%= movie.url_name %>" disabled>
                      <%= actor.actor_name %>
                    </option>
                    <% } }); %>
                </select>
              </div> -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function redirectToEdit() {
      const movieUrl = "<%= movie.url_name %>";
      window.location.href = "/admin/movie-management/edit/" + movieUrl;
    }
    function redirectToLinkActor() {
      const movieUrl = "<%= movie.url_name %>";
      window.location.href = "/admin/movie-management/link-actor/" + movieUrl;
    }
    function redirectToUnlinkActor() {
      const movieUrl = "<%= movie.url_name %>";
      window.location.href = "/admin/movie-management/unlink-actor/" + movieUrl;
    }
    function removeMovie() {
      const movieUrl = "<%= movie.url_name %>";
      window.location.href = "/admin/movie-management/remove/" + movieUrl;
    }
  </script>

  <script>
    function comfirmDelete(msg, event) {
      if (window.confirm(msg) == true) {
        return true;
      }
      event.preventDefault();
      return false;
    }
  </script>

